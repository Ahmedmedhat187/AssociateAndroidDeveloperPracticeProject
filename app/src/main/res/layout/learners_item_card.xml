<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dimens_10"
    android:layout_marginRight="@dimen/dimens_15"
    android:layout_marginLeft="@dimen/dimens_15"
    android:layout_marginBottom="@dimen/dimens_6"
    android:elevation="@dimen/dimens_5"
    android:padding="@dimen/dimens_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_100"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginStart="@dimen/dimens_20"
            android:layout_marginEnd="@dimen/dimens_20"
            android:layout_width="@dimen/dimens_120"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/logo_top_learners" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_8"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_18"
                tools:text="Name" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_16"
                tools:text="Details" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
